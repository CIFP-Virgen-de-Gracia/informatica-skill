{
    "type": "APL",
    "version": "1.1",
    "theme": "light",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#012446"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStylePrimary": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "300",
                "fontSize": "@textSizePrimary"
            }
        },
        "textStyleSecondary": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "100",
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStyleBody": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "300",
                "fontSize": "@textSizeBody"
            }
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        },
        "textStyleDetails": {
            "values": {
                "color": "@colorTextPrimary",
                "fontWeight": "500",
                "fontSize": "@textSizeDetails"
            }
        }
    },
    "layouts": {
        "FullHorizontalListItem": {
            "parameters": [
                "listLength"
            ],
            "item": [
                {
                    "type": "TouchWrapper",
                    "id": "touch-${ordinal}",
                    "item": {
                        "type": "Container",
                        "id": "mycontainer",
                        "height": "100vh",
                        "width": "100vw",
                        "alignItems": "center",
                        "justifyContent": "end",
                        "items": [
                            {
                                "type": "Image",
                                "width": "100vw",
                                "height": "100vh",
                                "source": "${data.imagen}",
                                "scale": "best-fill",
                                "overlayColor": "rgba(0, 0, 0, 0.4)",
                                "position": "absolute"
                            },
                            {
                                "type": "Text",
                                "style": "textStyleBody",
                                "color": "white",
                                "maxLines": 1,
                                "fontSize": "25dp",
                                "text": "${data.siglas}"
                            },
                            {
                                "type": "Text",
                                "style": "textStyleDetails",
                                "color": "white",
                                "fontSize": "20dp",
                                "text": "${data.nombre}"
                            },
                            {
                                "type": "Text",
                                "paddingBottom": "20dp",
                                "spacing": "5dp",
                                "color": "white",
                                "fontSize": "15dp",
                                "text": "${ordinal} | ${listLength}"
                            }
                        ]
                    },
                    "onPress": [
                        {
                            "type": "SendEvent",
                            "arguments": [
                                "Modulos",
                                "${data}"
                            ]
                        },
                        {
                            "type": "SetState",
                            "componentId": "mycontainer",
                            "state": "disabled",
                            "value": true
                        }
                    ]
                }
            ]
        },
        "HorizontalListItem": {
            "item": [
                {
                    "type": "TouchWrapper",
                    "id": "touch-${ordinal}",
                    "item": {
                        "type": "Container",
                        "maxWidth": 528,
                        "minWidth": 312,
                        "paddingLeft": 16,
                        "paddingRight": 16,
                        "height": "100%",
                        "items": [
                            {
                                "type": "Image",
                                "width": "50vh",
                                "height": "50vh",
                                "source": "${data.imagen}",
                                "scale": "fill",
                                "align": "left"
                            },
                            {
                                "type": "Text",
                                "style": "textStyleSecondary",
                                "spacing": 12,
                                "color": "#012446",
                                "maxLines": 1,
                                "fontSize": "30dp",
                                "text": "<b>${ordinal}.</b> ${data.siglas}",
                                "fontWeight": "bold"
                            },
                            {
                                "type": "Text",
                                "style": "textStyleDetails",
                                "spacing": 4,
                                "fontSize": "20dp",
                                "text": "${data.nombre}",
                                "maxLines": 2
                            },
                            {
                                "type": "Text",
                                "style": "textStyleDetails",
                                "spacing": 4,
                                "maxLines": 1,
                                "fontSize": "13dp",
                                "text": "${data.horasSemanales} horas semanales. ${data.horasTotales} horas totales. "
                            }
                        ]
                    },
                    "onPress": [
                        {
                            "type": "SendEvent",
                            "arguments": [
                                "Modulos",
                                "${data}"
                            ]
                        },
                        {
                            "type": "SetState",
                            "componentId": "mycontainer",
                            "state": "disabled",
                            "value": true
                        }
                    ]
                }
            ]
        },
        "ListLayout": {
            "parameters": [
                "backgroundImage",
                "title",
                "skillIcon",
                "hintText",
                "list"
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @hubRoundSmall}",
                    "type": "Container",
                    "height": "100%",
                    "width": "100%",
                    "items": [
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "data": "${list}",
                            "height": "100%",
                            "width": "100%",
                            "numbered": true,
                            "item": [
                                {
                                    "type": "FullHorizontalListItem",
                                    "listLength": "${payload.listData.properties.list.listItems.length}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "when": "${@viewportProfile == @hubLandscapeSmall || @viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "Image",
                            "opacity": 0.5,
                            "width": "100vw",
                            "height": "100vh",
                            "source": "${backgroundImage}",
                            "scale": "best-fill",
                            "position": "absolute"
                        },
                        {
                            "theme": "light",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${skillIcon}",
                            "type": "AlexaHeader"
                        },
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "paddingLeft": "@marginLeft",
                            "paddingRight": "@marginRight",
                            "data": "${list}",
                            "height": "70vh",
                            "width": "100%",
                            "numbered": true,
                            "item": [
                                {
                                    "type": "HorizontalListItem"
                                }
                            ]
                        },
                        {
                            "hintText": "${payload.listData.properties.config.hintText}",
                            "footerHint": "${payload.listData.properties.config.hintText}",
                            "theme": "light",
                            "type": "AlexaFooter"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "type": "ListLayout",
                "backgroundImage": "${payload.listData.properties.config.backgroundImage}",
                "title": "${payload.listData.properties.config.title}",
                "skillIcon": "${payload.listData.properties.config.skillIcon}",
                "hintText": "${payload.listData.properties.config.hintText}",
                "list": "${payload.listData.properties.list.listItems}"
            }
        ]
    }
}